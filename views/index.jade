// Main hero unit for a primary marketing message or call to action
div.container
	div.hero-unit
		h1 Welcome to Findr!
		p Click on the button below to get started.
		a.btn.btn-primary.btn-large(onClick='sendLocation()') Let's get started


script 
	function sendLocation() {
		if (navigator.geolocation) {
			navigator.geolocation.getCurrentPosition(getSAPIDATA);
		}
		else {
			// alert user geolocation is not turn on.
		}
	}
	function getSAPIDATA(position) {
		if (position && position.coords) {
			window.location = "list?lat=" + position.coords.latitude + "&long=" + position.coords.longitude;
		}  

	}